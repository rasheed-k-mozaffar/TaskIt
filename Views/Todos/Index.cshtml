@model IEnumerable<Todo>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}



<style>
    .btn-danger {
        background-color: rgb(242, 50, 50);
    }
</style>

<partial name="_NotificationPartial" />
<div class="container mt-5">
    

    <div class="row mb-5">
        <div class="col-8">
            <h1>Todos</h1>
        </div>

        <div class="col-4 text-end">
            <a class="main-btn" asp-controller="Todos" asp-action="AddTodo">Add New Todo</a>
        </div>


    </div>

    @foreach (Todo t in Model)
    {
        <div class="todos-table" >
            <div class="row mb-3">

                <div class="col-9">
                    <div class="todo-container row">
                        <h6 style="display: inline" class="col-10">@t.Title</h6>

                        <div class="col-1">
                            <a  asp-controller="Todos" asp-action="ViewTodo">View</a>
                        </div>
                    </div>
                </div>

                <div class="col-3 text-end" style="display: inline">
                    <form method="post">
                        <button class="btn btn-danger main-btn-todo" asp-controller="Todos" asp-action="RemoveTodo" asp-route-id="@t.Id"><i class="bi bi-trash"></i></button>
                    </form>
                    
                </div>
            </div>
        </div>
    }
</div>

