@model LoginUserModel
<link rel="stylesheet" href="~/css/LoginStyles.css" />

<body style="background-color: white;">
    <div class="container  d-flex align-items-center justify-content-center mt-3">
        <div class="row  form-container mt-5">
            <div class="col-1 left-side-form p-4">



            </div>

            <div class="col-11 right-side-form p-4">
                <form method="post">
                    <h3><i class="bi bi-person-circle"></i> Sign In To Your Account</h3>
                    <br>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label class="form-label">Email Address</label>
                        <input class="form-control" type="email" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Password</label>
                        <input class="form-control" type="password" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-1 ">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                        <label class="form-label">Remember me</label>

                    </div>



                    <p>Don't have an account ? Register <a asp-controller="User" asp-action="Register">here</a>.</p>

                    <div class=" form-group ">
                        <button type="submit" class="btn btn-primary" asp-controller="User" asp-action="SignIn">Sign In</button>

                    </div>
                </form>

            </div>

        </div>
    </div>
</body>